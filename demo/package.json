{
	"name": "metaxy-demo",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "cargo run --manifest-path ../Cargo.toml -p metaxy-cli -- watch & vite dev",
		"build": "cargo run --manifest-path ../Cargo.toml -p metaxy-cli -- generate && vite build",
		"generate": "cargo run --manifest-path ../Cargo.toml -p metaxy-cli -- generate",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "cargo test --manifest-path ../Cargo.toml --workspace && npx vitest run",
		"test:e2e": "BASE_URL=${BASE_URL:-https://metaxy-demo.vercel.app} npx playwright test",
		"test:integration": "npx vitest run",
		"test:rust": "cargo test --manifest-path ../Cargo.toml --workspace",
		"test:all": "cargo test --manifest-path ../Cargo.toml --workspace && npx vitest run && npx playwright test"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.2",
		"@fontsource/fira-mono": "^5.2.7",
		"@playwright/test": "^1.58.2",
		"@sveltejs/adapter-vercel": "^6.3.1",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.2.1",
		"@tanstack/svelte-query": "^6.0.18",
		"@types/node": "^24",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"lossless-json": "^4.3.0",
		"playwright": "^1.58.2",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"shiki": "^3.22.0",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"tailwindcss": "^4.2.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	}
}
